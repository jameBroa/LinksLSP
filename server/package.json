	"license": "MIT",
	"engines": {
		"node": "*"
	},
	"dependencies": {
		"@types/lodash": "^4.17.14",
		"antlr4ts": "^0.5.0-alpha.4",
		"antlr4ts-cli": "^0.5.0-alpha.4",
		"async-mutex": "^0.5.0",
		"lodash": "^4.17.21",
		"ts-node": "^10.9.2",
