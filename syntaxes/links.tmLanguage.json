{
  "name": "Links",
  "scopeName": "source.links",
  "patterns": [
      {
          "match": "\\b(fun|var|if|else|for|while|switch|case|default|module|import|typename|sig|page|database|table|from|insert|update|delete|query|where|set|with|values|formlet|yields)\\b",
          "name": "keyword.control.links"
      },
      {
          "match": "\\b(Int|String|Bool|Char|Float|Xml|Database|Page)\\b",
          "name": "support.type.links"
      },
      {
        "match": "^\\s*#.*",
        "name": "comment.line.pound.links"
      },
      {
        "match": "(?<!<)#.*",
        "name": "comment.line.pound.links"
      },
      {
        "match": "(?<=<#>.*)#.*",
        "name": "comment.line.pound.links"
      },
      
      {
          "match": ";",
          "name": "statement.end.links"
      },
      {
          "match": "\"([^\"\\\\]|\\\\.)*\"",
          "name": "string.quoted.double.links"
      },

      {
          "match": "(?<![a-zA-Z0-9])\\+|\\-|\\*|\\/|\\=|\\<|\\>(?![a-zA-Z0-9])",
          "name": "keyword.operator.links"
      }
  ],
  "repository": {
      "div-block": {
          "begin": "<div\\b[^>]*>",
          "beginCaptures": {
              "0": { "name": "entity.name.tag.div.html" }
          },
          "end": "</div>",
          "endCaptures": {
              "0": { "name": "entity.name.tag.div.html" }
          }
      },
      "h-tags": {
          "begin": "<h1\\b[^>]*>",
          "beginCaptures": {
              "0": { "name": "entity.name.tag.h1.html" }
          },
          "end": "</h1>",
          "endCaptures": {
              "0": { "name": "entity.name.tag.h1.html" }
          }
      },
      "page-block": {
          "begin": "\\b(page)\\b",
          "beginCaptures": {
              "1": { "name": "keyword.control.page.links" }
          },
          "end": "(?<=})",
          "patterns": [
              {
                  "include": "text.html.basic"
              }
          ],
          "name": "links.html"
      }
  }
}